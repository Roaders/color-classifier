{
  "name": "color-classifier",
  "version": "0.0.1",
  "description": "Classify the color along the reference color.",
  "main": "color-classifier.js",
  "scripts": {
    "start": "npm run watch",
    "build": "NODE_ENV=production rollup -c",
    "test": "NODE_ENV=development npm run lint && npm run mocha",
    "watch": "npm run watch:js & npm run watch:test",
    "watch:js": "onchange 'src/**/*' -- npm run build",
    "watch:test": "npm run mocha:watch",
    "mocha": "mocha --compilers js:babel-register",
    "mocha:watch": "mocha --compilers js:babel-register -w",
    "lint": "eslint src/**"
  },
  "author": "tsuyoshiwada",
  "license": "MIT",
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-rollup": "^1.1.1",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.8.0",
    "eslint": "^2.9.0",
    "mocha": "^2.4.5",
    "onchange": "^2.4.0",
    "power-assert": "^1.4.0",
    "rollup": "^0.26.2",
    "rollup-plugin-babel": "^2.4.0",
    "rollup-plugin-commonjs": "^2.2.1",
    "rollup-plugin-node-resolve": "^1.5.0"
  }
}
